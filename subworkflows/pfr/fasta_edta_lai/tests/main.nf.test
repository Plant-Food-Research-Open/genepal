    test("test_data") {

        when {
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test' ],
                    file("/Users/hrauxr/Projects/nxf-modules/data/chr1.fa", checkIfExists: true)
                ])
                input[1] = []
                input[2] = false
                """
            }
