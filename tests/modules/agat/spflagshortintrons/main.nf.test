nextflow_process {

    name "Test Process AGAT_SPFLAGSHORTINTRONS"
    script "../../../../modules/nf-core/agat/spflagshortintrons/main.nf"
    process "AGAT_SPFLAGSHORTINTRONS"

    tag "modules"
    tag "modules_nfcore"
    tag "agat"
    tag "agat/spflagshortintrons"

    test("Label 1bp intron with short_intron") {

        when {
            process {
                """
                input[0] = [
                    [id: 'test'],
                    file("$baseDir" + '/tests/subworkflows/gxf_fasta_agat_spaddintrons_spextractsequences/testdata/scaffold_4.gff', checkIfExists: true)
                ]
                input[1] = []
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            with (file(process.out.gff[0][1]).text) {
                assert contains('ID=gene28773;description=Hypothetical protein | no eggnog hit;short_intron=2')
            }
        }

    }

}
